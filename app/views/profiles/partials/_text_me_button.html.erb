<% if @profile.user != current_user %>
  <% chatrooms = current_user.chatrooms.where(id: @profile.user.chatrooms) %>
  <% if chatrooms.any?  %>
    <%= link_to "Text me!", chatroom_path(chatrooms.first), class: "button--red d-flex" %>
  <% else %>
    <%= link_to "Text me!", chatrooms_path(other_user_id: @profile.user.id), data: { turbo_method: "post" }, class: "button--red d-flex" %>
  <% end %>
<% end %>
