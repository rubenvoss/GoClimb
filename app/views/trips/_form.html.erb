<div data-controller="flatpickr" class="flatpickr-form-wrapper">
  <%= simple_form_for [@profile, @trip] do |f| %>
    <%= f.input :name, placeholder: 'Type a name here' %>
    <%= f.input :trip_start_date, label: "Start Date", as: :string, required: true,
                input_html: {class: "datepicker"} %>
    <%= f.input :trip_end_date, label: "End Date", as: :string, required: true,
                input_html: {class: "datepicker"} %>
    <%= f.association :crag, include_blank: "Select a crag" %>
    <%= f.submit class: "button--red" %>
  <% end %>
</div>
