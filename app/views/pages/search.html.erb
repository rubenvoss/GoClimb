<div class="container">

  <h3>WHERE DO YOU WANT TO CLIMB?</h3>
  <div data-controller="search">
    <%= form_with url: search_path, method: :get, html: {class:
      "mb-4", data: {search_target: "form"}} do |f| %>
      <%= f.text_field :query,
                       class: "form-control",
                       placeholder: "Search for a Crag or Country",
                       value: params[:query],
                       data: {search_target: "input",
                              action: "keyup->search#update"} %>
    <% end %>
    <div data-search-target="list"></div>
  </div>


  <h3>WHEN DO YOU WANT TO GO?</h3>
  <%# select a date %>
  <div data-controller="flatpickr" class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Flatpickr Demo</h2>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :trip_start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :trip_end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.submit "Continue", class: "red-button" %>
    <% end %>
  </div>

  <%# I'm flexible %>
  <br>
  <button class="blue-button">I'm flexible</button>

</div>
